<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
  <div data-controller="new-item" class="pt-4">
    <label for="item" class="block text-sm font-medium leading-5 text-gray-700">Add a new item to your shopping list</label>
    <div class="mt-1 relative rounded-md shadow-sm">
      <input id="item" class="form-input block w-full sm:text-sm sm:leading-5" data-target="new-item.item">
    </div>

    <span class="mt-2 inline-flex rounded-md shadow-sm">
      <button type="button" data-action="new-item#addNewItem" class="inline-flex items-center px-4 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150">
        Add Item
      </button>
    </span>
  </div>
</div>
